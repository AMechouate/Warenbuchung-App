{
  "expo": {
    "name": "Warenbuchung App",
    "slug": "warenbuchung-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/oicon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0072BC"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.warenbuchung.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0072BC"
      },
      "package": "com.warenbuchung.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "deine-project-id"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for barcode scanning",
          "microphonePermission": false
        }
      ]
    ]
  }
}
